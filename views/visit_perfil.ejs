  <div id="nombre-social" class="grande">
    <input type="text" value="<%=doc.nombre%>" id="nombre" name="nombre" required/>
    <a href="<%=doc.instagramk%>"><i class="fa fa-instagram" aria-hidden="true"></i></a>
    <a href="<%=doc.facebook%>"><i class="fa fa-facebook-square" aria-hidden="true"></i></a>
  </div>

  <div id="area" class="grande">
    <p>Descripcion: </p>
    <%if(typeof doc.descripcion=="undefined" || doc.descripcion==""){%>
      <textarea placeholder="Aqui puedes poner algo sobre ti. Tu edad, carrera, que te gusta hacer, etc." id="descripcion" name="descripcion"/></textarea></br>
    <%}%>
    <%if(typeof doc.descripcion!="undefined" && doc.descripcion!=""){%>
      <textarea id="descripcion" name="descripcion"><%=doc.descripcion%></textarea></br>
    <%}%>
  </div>

  <div id="nombre_desc" class="chico">
    <p><%=doc.nombre%></p>
    <%if(typeof doc.descripcion=="undefined" || doc.descripcion==""){%>
      <textarea id="descripcion" placeholder="Aqui puedes poner algo sobre ti. Tu edad, carrera, que te gusta hacer, etc." id="descripcion" name="descripcion"/></textarea></br>
    <%}%>
    <%if(typeof doc.descripcion!="undefined" && doc.descripcion!=""){%>
      <textarea id="descripcion" name="descripcion"><%=doc.descripcion%></textarea></br>
    <%}%>
  </div>

  <div class="chico" id="redes">
    <a href="<%=doc.instagramk%>"><i class="fa fa-instagram" aria-hidden="true"></i></a>
    <a href="<%=doc.facebook%>"><i class="fa fa-facebook-square" aria-hidden="true"></i></a>
  </div>

  <div id="grupos" class="grande">
    <p>Grupos a los que esta suscrito este usuario:</p>
    <ul>
    <%for(i=0;i<doc.grupos.length;i++){%>
      <li><a href="/grupos/<%=doc.grupos[i]%>"><%=doc.grupos[i]%></a></li>
    <%}%>
    </ul>
  </div>
</div>
