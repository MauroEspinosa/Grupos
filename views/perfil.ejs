<html>
</head>
  <meta name="viewport" content="width=device-width initial-scale=1.0"/>
  <meta name="theme-color" content="#1B1B1B">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <link href="https://fonts.googleapis.com/css?family=Pavanam" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
  <script   src="https://code.jquery.com/jquery-2.2.1.min.js"   integrity="sha256-gvQgAFzTH6trSrAWoH1iPo9Xc96QxSZ3feW6kem+O00="   crossorigin="anonymous"></script>
  <!--<link rel="stylesheet" href="/css/estilo_perfil.css"/>-->
  <link rel="stylesheet" href="/css/hiddens.css">
  <link rel="stylesheet" href="/css/estilo_perfil_grande.css" media="screen and (min-width:800px)"/>
  <link rel="stylesheet" href="/css/estilo_perfil_chico.css" media="screen and (max-width:799px)"/>
  <script>
  $(document).ready(function(){
    $("div#container div#notificaciones").hide();

    $("div#nav ul li i.fa-bell").click(function(){
      $("div#container div#notificaciones").slideToggle();
    });

    $("div#container div#nombre-social i.fa-bell").click(function(){
      $("div#container div#notificaciones").slideToggle();
    });
  });
  </script>
</head>
<body>
<div id="nav" class="chico">
  <ul>
    <li><i class="fa fa-bell" aria-hidden="true"></i></li>
    <li><a href="/busqueda"><i class="fa fa-search" aria-hidden="true"></i></a></li>
  </ul>
</div>

<div id="container">
<div id="foto" class="grande">
<%if(doc.extension=="" || doc.extension==null){%>
    <img style="background-image:url('/imagenes/usuario.png')"/>
<%}%>
<%if(doc.extension=="jpg" || doc.extension=="png"){%>
    <img style="background-image:url('/imagenes/<%=doc._id%>.<%=doc.extension%>')"/>
<%}%>
<form class="grande" method="post" action="/actualizar_foto" enctype="multipart/form-data">
  <div id="subir">
    <p style="margin:0">Seleccionar</p>
    <input type="file" id="foto" name="foto"/></br>
  </div>
  <input type="submit" id="btn_subir" value="Guardar nueva foto"/>
</form>
</div>

<div class="chico" id="top">
  <%if(doc.extension=="" || doc.extension==null){%>
      <div><img style="background-image:url('/imagenes/usuario.png')"/></div>
  <%}%>
  <%if(doc.extension=="jpg" || doc.extension=="png"){%>
      <div id="foto" style="background-image:url('/imagenes/<%=doc._id%>.<%=doc.extension%>')"></div>
  <%}%>
</div>

<div id="nombre_desc" class="chico">
  <p><%=doc.nombre%></p>
  <%if(typeof doc.descripcion=="undefined" || doc.descripcion==""){%>
    <textarea id="descripcion" placeholder="Aqui puedes poner algo sobre ti. Tu edad, carrera, que te gusta hacer, etc." id="descripcion" name="descripcion"/></textarea></br>
  <%}%>
  <%if(typeof doc.descripcion!="undefined" && doc.descripcion!=""){%>
    <textarea id="descripcion" name="descripcion"><%=doc.descripcion%></textarea></br>
  <%}%>
</div>

