<form action="/actualizar_info" class="grande">
  <div id="nombre-social">
    <input type="text" value="<%=doc.nombre%>" id="nombre" name="nombre" required/>
    <a href="/busqueda"><i class="fa fa-search" aria-hidden="true"></i></a>
    <i class="fa fa-bell" aria-hidden="true"></i>
  </div>

  <div id="area" class="grande">
    <p>Descripcion: </p>
    <%if(typeof doc.descripcion=="undefined" || doc.descripcion==""){%>
      <textarea placeholder="Aqui puedes poner algo sobre ti. Tu edad, carrera, que te gusta hacer, etc." id="descripcion" name="descripcion"/></textarea></br>
    <%}%>
    <%if(typeof doc.descripcion!="undefined" && doc.descripcion!=""){%>
      <textarea id="descripcion" name="descripcion"><%=doc.descripcion%></textarea></br>
    <%}%>
  </div>

  <p>Redes sociales: </p>
<!-- null sirve para los numeros
  <%if(doc.edad==null){%>
    <input type="text" placeholder="Link a tu facebook" id="edad" name="edad"/></br>
  <%}%>
  <%if(doc.edad!=null){%>
    <input type="text" value="<%=doc.edad%>" id="edad" name="edad"/></br>
  <%}%>
-->
  <%if(typeof doc.facebook=="undefined" || doc.facebook==""){%>
    <input type="text" placeholder="Link a tu facebook" id="facebook"  name="facebook"></br>
  <%}%>
  <%if(typeof doc.facebook!="undefined" && doc.facebook!=""){%>
    <input type="text" value="<%=doc.facebook%>" id="facebook" name="facebook"></br>
  <%}%>

  <%if(typeof doc.instagram=="undefined" || doc.instagram==""){%>
    <input type="text" placeholder="Link a tu instagram" id="instagram" name="instagram"></br>
  <%}%>
  <%if(typeof doc.instagram!="undefined" && doc.instagram!=""){%>
    <input type="text" value="<%=doc.semestre%>" id="instagram" name="instagram"></br>
  <%}%>

  <div id="guardar">
    <input type="submit" value="Guardar"/>
  </div>
</form>

<div id="grupos">
  <p>Grupos en los que te has suscrito:</p>
  <ul>
  <%for(i=0;i<doc.grupos.length;i++){%>
    <li><a href="/grupos/<%=doc.grupos[i]%>"><%=doc.grupos[i]%></a><a href="/unsuscribe?grupo=<%=doc.grupos[i]%>"><i class="fa fa-times" aria-hidden="true"></i></a></li>
  <%}%>
  </ul>
  </br>
</div>

<div id="notificaciones">
<ul>
<%if(doc.notificaciones.length!=0){%>
  <%for(i=doc.notificaciones.length-1; i>=0; i--){%>
    <li><a href="/grupos/<%=doc.notificaciones[i].grupo%>/<%=doc.notificaciones[i].id%>">
    <h4><%=doc.notificaciones[i].info%> en el grupo <%=doc.notificaciones[i].grupo%></h4>
    </a></li>
  <%}%>
<%}else{%>
  <li><h4 style="color:#373737">No tienes notificaciones</h4></li>
<%}%>
</ul>
</div>



</div>
</body>
</html>
